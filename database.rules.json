{
  "rules": { 
    "requests": {
      ".read": "auth != null",
	    ".write": "auth != null"   
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
	    	".write": "$uid === auth.uid"
      }
    }, 
    "messages": {
      ".write": "auth != null",
      "$uid": {
        ".read": "$uid === auth.uid"
      }
    },
    "reviews": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid !== auth.uid"
      }
    }
  }
}
