{
  "rules": { 
    "requests": {
      ".read": "auth != null",
	    ".write": "auth != null"   
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
	    	".write": "$uid === auth.uid"
      }
    }, 
    "messages": {
      "$uid": {
        ".read": "$uid === auth.uid",
	    	".write": "$uid === auth.uid"
      }
    },
  }
}
